/* pages/strategy/strategy.wxss */
@import "../../utils/styles/main.wxss";
@import "../../utils/styles/icon.wxss";
@import "../../utils/styles/animation.wxss";
@import "../../utils/styles/base.wxss";

page{
    width: 100%;
    background-color: #f2f2f2;
}

.tabs-body{
    position: fixed;
    top: 0rpx;
    z-index: 1008;
    height: 46px;
    background-color: white;
    border-top: 1px solid #f2f2f2;
    border-bottom: 1px solid #f2f2f2;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.tabs-list{
    width: 98%;
    background-color:#f2f2f2;
    height: 28px;
    margin-left: 2%;
    border-radius: 14px;
}

.tabs-item{
    background-image:linear-gradient(45deg, #f2f2f2, #f2f2f2);
    width: 25%;
    height: 28px;
    border-radius: 14px;
    color: #555555;
    font-size: 26rpx;
}

.tabs-item-select{
    background-image:linear-gradient(45deg, #f43f3b, #e76960);
    color: white;
    width: 25%;
    height: 28px;
    border-radius: 14px;
    font-size: 26rpx;
}